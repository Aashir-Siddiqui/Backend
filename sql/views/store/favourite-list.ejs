<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto px-4 py-8 md:py-12 max-w-7xl">
    
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center space-x-3 mb-4">
        <div class="bg-red-100 p-3 rounded-full">
          <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900">My Favourites</h1>
          <p class="text-gray-600 mt-1">Properties you've saved for later</p>
        </div>
      </div>
      
      <div class="flex items-center justify-between border-b border-gray-200 pb-4">
        <span class="text-gray-700 font-semibold">
          <span class="text-red-600 text-xl"><%= favouriteHomes.length %></span> saved properties
        </span>
      </div>
    </div>
    
    <!-- Empty State -->
    <% if (favouriteHomes.length === 0) { %>
      <div class="bg-white rounded-2xl shadow-lg p-12 md:p-16 text-center">
        <div class="mb-6">
          <svg class="w-32 h-32 mx-auto text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        </div>
        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">No Favourites Yet</h3>
        <p class="text-gray-600 text-lg mb-8 max-w-md mx-auto">
          Start exploring and save your favorite properties to plan your perfect trip!
        </p>
        <a href="/homes" class="inline-flex items-center space-x-2 bg-gradient-to-r from-red-600 to-red-500 hover:from-red-700 hover:to-red-600 text-white font-semibold py-3 px-8 rounded-full transition duration-300 shadow-lg hover:shadow-xl">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          <span>Explore Homes</span>
        </a>
      </div>
    
    <!-- Favourites Grid -->
    <% } else { %>
      <div class="grid gap-5 md:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% favouriteHomes.forEach(home => { %>
          <div class="group bg-white rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:border-red-200 transform hover:-translate-y-1">
            
            <!-- Photo Section -->
            <div class="relative h-52 bg-gray-100 overflow-hidden">
              <a href="/homes/<%=home.id%>">
                <img 
                  src="<%= home.photoUrl %>" 
                  alt="<%= home.houseName %>"
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  onerror="this.src='https://via.placeholder.com/400x300?text=No+Image'"
                />
              </a>
              
              <!-- Remove from Favourites Button -->
               <form action="/favourites/delete/<%=home.id%>" method="POST">
                  <button class="absolute top-3 right-3 bg-white/95 backdrop-blur-sm hover:bg-red-50 p-2.5 rounded-full shadow-lg transition duration-300 group/btn">
                    <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                  </svg>
                </button>
               </form>
              
              <!-- Rating Badge -->
              <div class="absolute top-3 left-3 bg-white/95 backdrop-blur-sm px-3 py-1.5 rounded-full shadow-lg flex items-center space-x-1">
                <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span class="font-bold text-gray-900 text-sm"><%= home.rating %></span>
              </div>
            </div>

            <!-- Content Section -->
            <a href="/homes/<%=home.id%>" class="block p-4">
              <!-- Location -->
              <div class="flex items-start mb-2">
                <svg class="w-4 h-4 text-gray-400 mr-1.5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span class="text-sm text-gray-600 line-clamp-1"><%= home.houseAddress %></span>
              </div>
              
              <!-- Title -->
              <h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-red-600 transition-colors">
                <%= home.houseName %>
              </h3>
              
              <!-- Price -->
              <div class="flex items-baseline space-x-1 mt-3">
                <span class="text-2xl font-bold text-gray-900">$<%= home.housePrice %></span>
                <span class="text-sm text-gray-500">/ night</span>
              </div>
            </a>

            <!-- Action Buttons -->
            <div class="px-4 pb-4 flex gap-2">
              <a href="/homes/<%=home.id%>" class="flex-1 bg-gradient-to-r from-red-600 to-red-500 hover:from-red-700 hover:to-red-600 text-white text-center font-semibold py-2.5 rounded-lg transition duration-300 shadow-md hover:shadow-lg">
                View Details
              </a>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Bottom Actions -->
      <div class="mt-12 bg-white rounded-2xl shadow-lg p-8 text-center">
        <h3 class="text-2xl font-bold text-gray-900 mb-3">Ready to Book?</h3>
        <p class="text-gray-600 mb-6">Find the perfect time for your stay</p>
        <a href="/homes" class="inline-flex items-center space-x-2 bg-gray-900 hover:bg-gray-800 text-white font-semibold py-3 px-8 rounded-full transition duration-300">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          <span>Continue Exploring</span>
        </a>
      </div>
    <% } %>
  </main>
</body>
</html>