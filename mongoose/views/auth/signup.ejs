<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-gray-50 to-red-50 min-h-screen">
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto px-4 py-8 md:py-12 max-w-2xl">
    
    <!-- Signup Card with Animation -->
    <div class="bg-white shadow-2xl rounded-3xl overflow-hidden border border-gray-100 transform transition-all duration-300 hover:scale-[1.01]">
      
      <!-- Header Section with Gradient -->
      <div class="bg-gradient-to-r from-red-600 via-red-500 to-pink-500 p-8 md:p-10 text-white text-center relative overflow-hidden">
        <!-- Decorative circles -->
        <div class="absolute top-0 right-0 w-40 h-40 bg-white/10 rounded-full -mr-20 -mt-20"></div>
        <div class="absolute bottom-0 left-0 w-32 h-32 bg-white/10 rounded-full -ml-16 -mb-16"></div>
        
        <div class="relative z-10">
          <div class="mb-4 animate-bounce-slow">
            <div class="bg-white/20 backdrop-blur-sm p-4 rounded-full w-20 h-20 mx-auto flex items-center justify-center shadow-xl">
              <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
              </svg>
            </div>
          </div>
          <h1 class="text-3xl font-bold mb-2">Create Account</h1>
          <p class="text-red-100 text-lg">Join our community today!</p>
        </div>
      </div>

      <!-- Form Section -->
      <form action="/signup" method="POST" class="p-6 md:p-8 space-y-5">
        <%- include('../partials/errormsg') %>
          <!-- Name Fields Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">        
          <!-- First Name -->
          <div class="group">
            <label for="firstName" class="block text-sm font-bold text-gray-700 mb-2 flex items-center">
              <div class="bg-gradient-to-br from-red-100 to-pink-100 p-1.5 rounded-lg mr-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              First Name
              <span class="text-red-500 ml-1">*</span>
            </label>
            <input
              id="firstName"
              type="text"
              name="firstName"
              placeholder="Aashir"
              value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
              required
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition bg-gray-50 focus:bg-white"
            />
          </div>

          <!-- Last Name -->
          <div class="group">
            <label for="lastName" class="block text-sm font-bold text-gray-700 mb-2 flex items-center">
              <div class="bg-gradient-to-br from-red-100 to-pink-100 p-1.5 rounded-lg mr-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              Last Name
              <span class="text-red-500 ml-1">*</span>
            </label>
            <input
              id="lastName"
              type="text"
              name="lastName"
              placeholder="Siddiqui"
              value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
              required
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition bg-gray-50 focus:bg-white"
            />
          </div>
        </div>

        <!-- Email Field -->
        <div class="group">
          <label for="email" class="block text-sm font-bold text-gray-700 mb-2 flex items-center">
            <div class="bg-gradient-to-br from-red-100 to-pink-100 p-1.5 rounded-lg mr-2 group-hover:scale-110 transition-transform">
              <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
            </div>
            Email Address
            <span class="text-red-500 ml-1">*</span>
          </label>
          <div class="relative">
            <input
              id="email"
              type="email"
              name="email"
              placeholder="aashir.siddiqui@example.com"
              required
              value="<%= oldInput.email ? oldInput.email : '' %>"
              class="w-full px-4 py-3 pl-12 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition bg-gray-50 focus:bg-white"
            />
            <svg class="w-5 h-5 text-gray-400 absolute left-4 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>

        <!-- Password Fields Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
          
          <!-- Password -->
          <div class="group">
            <label for="password" class="block text-sm font-bold text-gray-700 mb-2 flex items-center">
              <div class="bg-gradient-to-br from-red-100 to-pink-100 p-1.5 rounded-lg mr-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              Password
              <span class="text-red-500 ml-1">*</span>
            </label>
            <div class="relative">
              <input
                id="password"
                type="password"
                name="password"
                placeholder="Enter password"
                required
                minlength="6"
                class="w-full px-4 py-3 pl-12 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition bg-gray-50 focus:bg-white"
              />
              <svg class="w-5 h-5 text-gray-400 absolute left-4 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
              </svg>
            </div>
          </div>

          <!-- Confirm Password -->
          <div class="group">
            <label for="confirmPassword" class="block text-sm font-bold text-gray-700 mb-2 flex items-center">
              <div class="bg-gradient-to-br from-red-100 to-pink-100 p-1.5 rounded-lg mr-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              Confirm
              <span class="text-red-500 ml-1">*</span>
            </label>
            <div class="relative">
              <input
                id="confirmPassword"
                type="password"
                name="confirmPassword"
                placeholder="Confirm password"
                required
                minlength="6"
                class="w-full px-4 py-3 pl-12 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition bg-gray-50 focus:bg-white"
              />
              <svg class="w-5 h-5 text-gray-400 absolute left-4 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- User Type Selection -->
        <div class="group">
          <label class="block text-sm font-bold text-gray-700 mb-3 flex items-center">
            <div class="bg-gradient-to-br from-red-100 to-pink-100 p-1.5 rounded-lg mr-2">
              <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            I want to
            <span class="text-red-500 ml-1">*</span>
          </label>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            
            <!-- Guest Option -->
            <label class="relative flex items-center p-4 border-2 border-gray-300 rounded-xl cursor-pointer hover:border-red-400 transition group/radio">
              <input
                type="radio"
                name="userType"
                value="guest"
                id="guest"
                checked="<% oldInput.userType === "guest" %>"
                class="w-5 h-5 text-red-600 focus:ring-red-500"
              />
              <div class="ml-3 flex-1">
                <div class="flex items-center space-x-2 mb-1">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                  <span class="font-bold text-gray-900">Find a place</span>
                </div>
                <p class="text-xs text-gray-600">Book amazing homes</p>
              </div>
            </label>

            <!-- Host Option -->
            <label class="relative flex items-center p-4 border-2 border-gray-300 rounded-xl cursor-pointer hover:border-red-400 transition group/radio">
              <input
                type="radio"
                name="userType"
                value="host"
                id="host"
                checked="<% oldInput.userType === "host" %>"
                class="w-5 h-5 text-red-600 focus:ring-red-500"
              />
              <div class="ml-3 flex-1">
                <div class="flex items-center space-x-2 mb-1">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                  </svg>
                  <span class="font-bold text-gray-900">List my place</span>
                </div>
                <p class="text-xs text-gray-600">Earn as a host</p>
              </div>
            </label>
          </div>
        </div>

        <!-- Terms and Conditions -->
        <div class="flex items-start space-x-3 p-4 bg-gray-50 rounded-xl border border-gray-200">
          <input
            type="checkbox"
            id="terms"
            name="terms"
            required
            class="w-5 h-5 mt-0.5 text-red-600 border-gray-300 rounded focus:ring-red-500 cursor-pointer"
          />
          <label for="terms" class="text-sm text-gray-700 cursor-pointer">
            I agree to the 
            <a href="/terms" class="text-red-600 hover:text-red-700 font-semibold hover:underline" target="_blank">Terms of Service</a>
            and 
            <a href="/privacy" class="text-red-600 hover:text-red-700 font-semibold hover:underline" target="_blank">Privacy Policy</a>
            <span class="text-red-500">*</span>
          </label>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-gradient-to-r from-red-600 via-red-500 to-pink-500 hover:from-red-700 hover:via-red-600 hover:to-pink-600 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 shadow-lg hover:shadow-2xl flex items-center justify-center space-x-2 transform hover:-translate-y-0.5 active:translate-y-0"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
          </svg>
          <span>Create Account</span>
        </button>

      </form>

      <!-- Login Link -->
      <div class="bg-gradient-to-r from-gray-50 to-red-50 px-8 py-5 text-center border-t border-gray-200">
        <p class="text-gray-700">
          Already have an account? 
          <a href="/login" class="text-red-600 hover:text-red-700 font-bold hover:underline transition ml-1">
            Sign In
          </a>
        </p>
      </div>
    </div>

    <!-- Security Badge -->
    <div class="mt-6 text-center">
      <div class="inline-flex items-center space-x-2 text-sm text-gray-600 bg-white px-4 py-2 rounded-full shadow-md">
        <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>Secure & Encrypted Connection</span>
      </div>
    </div>
  </main>

  <style>
    @keyframes bounce-slow {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }
    .animate-bounce-slow {
      animation: bounce-slow 3s ease-in-out infinite;
    }
  </style>
</body>
</html>