<%- include('../partials/head') %>
</head>
<body class="bg-red-50">
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto px-4 mt-6 md:mt-10 max-w-7xl mb-10">
    <!-- Back Button -->
    <div class="mb-6">
      <a href="/homes" class="inline-flex items-center space-x-2 text-red-600 hover:text-red-700 font-semibold transition duration-300">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>Back to Homes</span>
      </a>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      
      <!-- Left Section - Images & Details -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Image Gallery -->
        <div class="bg-white rounded-lg overflow-hidden shadow-lg">
          <div class="relative h-64 sm:h-96 bg-gray-200">
            <img 
              src="<%= home.photoUrl %>" 
              alt="<%= home.houseName %>"
              class="w-full h-full object-cover"
              onerror="this.src='https://via.placeholder.com/800x600?text=No+Image'"
            />
            <!-- Favorite Button -->
            <%- include('../partials/favourite', {home: home}) %>
            <!-- Rating Badge -->
            <div class="absolute bottom-4 left-4 bg-white px-4 py-2 rounded-full shadow-lg flex items-center space-x-2">
              <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <span class="font-bold text-gray-800"><%= home.rating %></span>
              <span class="text-gray-600 text-sm">(24 reviews)</span>
            </div>
          </div>
        </div>

        <!-- Property Information -->
        <div class="bg-white rounded-lg shadow-lg p-6 md:p-8">
          <div class="border-b border-gray-200 pb-6 mb-6">
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-3">
              <%= home.houseName %>
            </h1>
            <div class="flex items-center text-gray-600 space-x-2">
              <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="text-lg"><%= home.houseAddress %></span>
            </div>
          </div>

          <!-- Quick Stats -->
          <div class="grid grid-cols-3 gap-4 mb-6 pb-6 border-b border-gray-200">
            <div class="text-center p-4 bg-red-50 rounded-lg">
              <svg class="w-6 h-6 text-red-500 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <p class="text-sm text-gray-600">Guests</p>
              <p class="font-bold text-gray-900">4</p>
            </div>
            <div class="text-center p-4 bg-red-50 rounded-lg">
              <svg class="w-6 h-6 text-red-500 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
              <p class="text-sm text-gray-600">Bedrooms</p>
              <p class="font-bold text-gray-900">2</p>
            </div>
            <div class="text-center p-4 bg-red-50 rounded-lg">
              <svg class="w-6 h-6 text-red-500 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <p class="text-sm text-gray-600">Bathrooms</p>
              <p class="font-bold text-gray-900">2</p>
            </div>
          </div>

          <!-- Description -->
          <div class="mb-6 pb-6 border-b border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">About this place</h2>
            <p class="text-gray-600 leading-relaxed">
              Welcome to this beautiful home! Experience comfort and luxury in this well-appointed property. 
              Perfect for families or groups looking for a memorable stay. The space features modern amenities, 
              comfortable furnishings, and everything you need for a perfect getaway. Enjoy easy access to local 
              attractions, restaurants, and entertainment.
            </p>
          </div>

          <!-- Amenities -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">What this place offers</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="flex items-center space-x-3 text-gray-700">
                <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/>
                </svg>
                <span>WiFi</span>
              </div>
              <div class="flex items-center space-x-3 text-gray-700">
                <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <span>Free parking</span>
              </div>
              <div class="flex items-center space-x-3 text-gray-700">
                <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                </svg>
                <span>Kitchen</span>
              </div>
              <div class="flex items-center space-x-3 text-gray-700">
                <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>Air conditioning</span>
              </div>
              <div class="flex items-center space-x-3 text-gray-700">
                <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
                <span>TV</span>
              </div>
              <div class="flex items-center space-x-3 text-gray-700">
                <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
                </svg>
                <span>Heating</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Section - Booking Card (Sticky) -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-xl p-6 border-2 border-red-200 sticky top-6">
          <!-- Price -->
          <div class="mb-6">
            <div class="flex items-baseline space-x-2">
              <span class="text-4xl font-bold text-red-600">$<%= home.housePrice %></span>
              <span class="text-gray-600">/ night</span>
            </div>
            <div class="flex items-center space-x-1 mt-2">
              <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <span class="font-bold text-gray-800"><%= home.rating %></span>
              <span class="text-gray-600 text-sm">· 24 reviews</span>
            </div>
          </div>

          <!-- Date Selection -->
          <div class="mb-4 border border-gray-300 rounded-lg overflow-hidden">
            <div class="grid grid-cols-2">
              <div class="p-3 border-r border-gray-300">
                <label class="text-xs font-semibold text-gray-700 uppercase">Check-in</label>
                <input type="date" class="w-full text-sm mt-1 border-0 focus:ring-0 p-0" />
              </div>
              <div class="p-3">
                <label class="text-xs font-semibold text-gray-700 uppercase">Check-out</label>
                <input type="date" class="w-full text-sm mt-1 border-0 focus:ring-0 p-0" />
              </div>
            </div>
            <div class="p-3 border-t border-gray-300">
              <label class="text-xs font-semibold text-gray-700 uppercase">Guests</label>
              <select class="w-full text-sm mt-1 border-0 focus:ring-0 p-0">
                <option>1 guest</option>
                <option>2 guests</option>
                <option>3 guests</option>
                <option>4 guests</option>
              </select>
            </div>
          </div>

          <!-- Reserve Button -->
          <button class="w-full bg-gradient-to-r from-red-600 to-red-500 hover:from-red-700 hover:to-red-600 text-white font-bold py-4 px-6 rounded-lg transition duration-300 shadow-lg hover:shadow-xl flex items-center justify-center space-x-2 mb-4">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span>Reserve Now</span>
          </button>

          <p class="text-center text-sm text-gray-600 mb-4">You won't be charged yet</p>

          <!-- Price Breakdown -->
          <div class="border-t border-gray-200 pt-4 space-y-3">
            <div class="flex justify-between text-gray-700">
              <span>$<%= home.housePrice %> × 5 nights</span>
              <span>$<%= home.housePrice * 5 %></span>
            </div>
            <div class="flex justify-between text-gray-700">
              <span>Service fee</span>
              <span>$50</span>
            </div>
            <div class="flex justify-between font-bold text-lg text-gray-900 pt-3 border-t border-gray-200">
              <span>Total</span>
              <span>$<%= (home.housePrice * 5) + 50 %></span>
            </div>
          </div>
        </div>

        <!-- Report Listing -->
        <div class="mt-6 text-center">
          <button class="text-gray-600 hover:text-red-600 underline text-sm transition duration-300">
            Report this listing
          </button>
        </div>
      </div>
    </div>
  </main>
</body>
</html>